@model IEnumerable<PruebaYeisonLlanes.Models.Numeros>

@{
    ViewData["Title"] = "Numeros";
}

<h1>Numeros</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Numero</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdNumero">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdNumero">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdNumero">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
