@model IEnumerable<PruebaYeisonLlanes.Models.Prioridades>

@{
    ViewData["Title"] = "Prioridades";
}

<h1>Prioridades</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Prioridad</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prioridad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prioridad)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdPrioridades">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.IdPrioridades">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdPrioridades">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
