@model IEnumerable<PruebaYeisonLlanes.Models.Operadores>

@{
    ViewData["Title"] = "Operadores";
}

<h1>Operadores</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Operador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Operador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPrioridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUbicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Operador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPrioridadNavigation.IdPrioridades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUbicacionNavigation.IdUbicacion)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdOperador">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.IdOperador">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdOperador">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
